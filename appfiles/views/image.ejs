<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Audio Converter</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
    <script src="https://sdk.amazonaws.com/js/aws-sdk-2.207.0.min.js"></script>
</head>

<body>

    <div class="container">
        <h2>Image converter</h2>
        <form id="form1" enctype="multipart/form-data" method="post">
            <div class="row">
                <label for="file">Select a File to Upload</label>
                <br />
                
            </div>
            <div>
                <button type="button" id="button">Open</button>
                <input id="file-input" type="file" name="name" style="display: none;" />
            </div>
            <div>
                <label>File name: </label>
                <label id="fileName"></label>
            </div>
            <div id="fileSize"></div>
            <div id="fileType"></div>
            <div class="row">
                <input type="button" onclick="uploadFile()" value="Upload" />
                <progress max="100" value="0"></progress>
            </div>
            <div id="progressNumber"></div>
            <label> <strong>Formato</strong></label>
        </form>

        <div class="col-4 col-md-4 col-xl-4">
            <select class="browser-default custom-select" id="formato">
                <option value='{"from":"jpg", "to":"png"}'>jpg a png</option>
                <option value='{"from":"png", "to":"jpg"}'>png a jpg</option>
            </select>
        </div>

        <div>
            <label ></label>
            <a id="linkLabel"></a>
        </div>
    </div>
    <script type="text/javascript">

        function uploadFile() {
            AWS.config.update({
                accessKeyId: '',
                secretAccessKey: '',
                region: 'sa-east-1'
            });

            var bucketName = 'imagestoconvert';
            var fileToBeUpload = document.getElementById('file-input').files[0];
            var randomKey = Math.ceil(Math.random()*1000000000);
            var convertion = JSON.parse($( "#formato" ).val());
            var filePath = convertion.from+'/'+randomKey+fileToBeUpload.name; // File will be saved to this folder on aws s3.
            var fileNameWithoutExt = randomKey+fileToBeUpload.name.split(".")[0];
            
            // Initialize the AWS Object
            var bucket = new AWS.S3({
                apiVersion: '2006-03-01',
                params: { Bucket: bucketName }
            });

            var params = {
                Key: filePath,
                ContentType: fileToBeUpload.type,
                Body: fileToBeUpload,
                ContentDisposition: 'attachment' // if you want to enable file download via public url.
            };

            /* turn off the timeout (Optional) */
            AWS.config.httpOptions.timeout = 0;

            // upload file
            bucket.upload(params).on('httpUploadProgress', function (evt) {
                var uploaded = Math.round(evt.loaded / evt.total * 100);
                console.log('File uploaded:' + uploaded);
                $("progress").attr('value', uploaded);
            }).send(function (err, data) {
                if (err) {
                    // an error occurred, handle the error
                    console.log(err, err.stack);
                    return;
                }

                var fileUrl = data.Location;
                console.log('File URL:', fileUrl);
                alert('File is uploaded successfully!');
                returnImageLink(convertion.to , fileNameWithoutExt, 1);
            })
        }

        function returnImageLink(formatName, fileName, intento) {
            const maxIntentos = 24 //2 minutos hasta timeout (5 segundos * 24 intentos)

            if(intento> maxIntentos) {
                alert("No se pudo convertir el archivo")
            }
            else {
                const dominio = "https://convertedimages.s3-sa-east-1.amazonaws.com/"
                const bucketKey = formatName + '/' + fileName + '.' + formatName;
                const ruta = dominio + bucketKey;
                var s3 = new AWS.S3();
                s3.getObject(
                    { Bucket: "convertedimages", Key: bucketKey },
                    function (error, data) {
                        if (error != null) {
                            setTimeout(function(){ 
                                returnImageLink(formatName, fileName, intento+1);

                                var currentdate = new Date(); 
                                var datetime = "intento "+ intento + ": " + currentdate.getDate() + "/"
                                                + (currentdate.getMonth()+1)  + "/" 
                                                + currentdate.getFullYear() + " @ "  
                                                + currentdate.getHours() + ":"  
                                                + currentdate.getMinutes() + ":" 
                                                + currentdate.getSeconds();

                                console.log(datetime)
                            }, 5000); 
                            
                        } else {
                        alert("Loaded " + data.ContentLength + " bytes");
                        $("#linkLabel").prop("href", ruta);
                        $("#linkLabel").html( ruta);
                        console.log(ruta);
                        // do something with data.Body
                        }
                    }
                );
            }
        }

    </script>
    <script src="js/uploadImage.js"></script>

</body>

</html>