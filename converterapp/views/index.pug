extends layout

block content

  h1= title
  p Welcome to #{title}
    
  .card(style='width: 30rem; textalign:center')
    .card-body
    h4.card-title AUDIO CONVERTER
    .row
      .col-6.col-md-6.col-lg-6
        .dropdown
        button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
          | Select a target format
        .dropdown-menu(aria-labelledby='dropdownMenuButton')
          a.dropdown-item(href='#') Convert to ACC
          a.dropdown-item(href='#') Convert to OGG
          a.dropdown-item(href='#') Convert to MP3
    
      .col-2.col-md-2.col-lg-2
        button.btn.btn-success(type='button') GO

  .card(style='width: 25rem;')
    .card-body
    h4.card-title IMAGE CONVERTER
    div.row
      div.col-6
        .dropdown
        button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
          | Select a target format
        .dropdown-menu(aria-labelledby='dropdownMenuButton')
          a.dropdown-item(href='#') Convert to JPEG
          a.dropdown-item(href='#') Convert to PNG
    
      div.col-3
        button.btn.btn-success(type='button') GO

  .card(style='width: 25rem;')
    .card-body
    h4.card-title AUDIO CONVERTER
    div.row
      div.col-6
        .dropdown
        button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
          | Select a target format
        .dropdown-menu(aria-labelledby='dropdownMenuButton')
          a.dropdown-item(href='#') Convert to DOC
          a.dropdown-item(href='#') Convert to DOCX
          a.dropdown-item(href='#') Convert to PDF
    
      div.col-3
        button.btn.btn-success(type='button') GO

    

